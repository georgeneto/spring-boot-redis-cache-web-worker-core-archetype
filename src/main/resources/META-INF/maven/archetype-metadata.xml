<archetype-descriptor name="${artifactId}">
  <requiredProperties>
    <requiredProperty key="modulePrefix"/>
  </requiredProperties>
	<modules>
		<module id="${modulePrefix}-ws" dir="__modulePrefix__-ws"
			name="${modulePrefix}-ws">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
				</fileSet>
				<fileSet encoding="UTF-8" filtered="true">
					<directory>src/main/resources</directory>
				</fileSet>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/test/java</directory>
				</fileSet>
				<fileSet encoding="UTF-8" filtered="true">
					<directory>src/test/resources</directory>
				</fileSet>
			</fileSets>
		</module>
		<module id="${modulePrefix}-core" dir="__modulePrefix__-core"
			name="${modulePrefix}-core">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
				</fileSet>
				<fileSet encoding="UTF-8" filtered="true">
					<directory>src/main/resources</directory>
				</fileSet>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/test/java</directory>
				</fileSet>
				<fileSet encoding="UTF-8" filtered="true">
					<directory>src/test/resources</directory>
				</fileSet>
			</fileSets>
		</module>
		<module id="${modulePrefix}-worker" dir="__modulePrefix__-worker"
			name="${modulePrefix}-worker">
			<fileSets>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                </fileSet>
                <fileSet encoding="UTF-8" filtered="true">
                    <directory>src/main/resources</directory>
                </fileSet>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/test/java</directory>
                </fileSet>
                <fileSet encoding="UTF-8" filtered="true">
                    <directory>src/test/resources</directory>
                </fileSet>
            </fileSets>
		</module>
	</modules>
	<fileSets>
		<fileSet encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>.gitignore</include>
			</includes>
		</fileSet>
	</fileSets>
</archetype-descriptor>
